@model Todo

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-5">Add New Todo</h1>

<form asp-action="Add" method="post">
    <div class="form-group mb-3">
        <input asp-for="Title" class="form-control" placeholder="Title" />
        <span asp-validation-for="Title" class="form-text text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <input asp-for="Subtitle" class="form-control" placeholder="Subtitle" />
        <span asp-validation-for="Subtitle" class="form-text text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
        <span asp-validation-for="Description" class="form-text text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <input class="form-check-input" type="checkbox" id="Completed" asp-for="IsCompleted" />
        <label class="form-check-label" for="Completed">Is Completed?</label>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>